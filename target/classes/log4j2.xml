<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="EngageEvents" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
        <File name="EngageEvents" fileName="logs/employee.events">
            <PatternLayout>
                <Pattern> %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="Employee">
            <AppenderRef ref="EngageEvents"/>
        </Logger>
        <Root level="ERROR">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>